<h1>Books</h1>

<table>
    <thead>
    <tr>
        <th>Title</th>
        <th>Body</th>
    </tr>
    </thead>

    <tbody>
       <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
        </tr>
    </tbod>
        <% end %>
</table>

<h2>Newbook</h2>

<% if @book.errors.any? %>
error
